<form action="/">
    <input name="query" type="text" id="search-box" />
    <input type="submit" value="Search" />
</form>

<link href="~/css/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.ui.autocomplete.min.js"></script>
<script type="text/javascript">
    /*
    * GSA search suggestions
    */

    // The URL to the suggestions endpoint. Change it as necessary.
    // Please note that the URL must be under the same domain as the requesting page, otherwise the Ajax request will be restricted by browser.
    var suggestUrl = "/suggest";

    $("#search-box").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: suggestUrl,
                dataType: "json",
                data: {
                    query: $(this.element).val()
                },
                success: function (data) {
                    response($.map(data[1], function (item) {
                        return {
                            label: item,
                            value: item
                        };
                    }));
                }
            });
        }
    });
</script>
